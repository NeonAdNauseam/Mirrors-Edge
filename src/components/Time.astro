      <script>
        /************
Dynamic Data
************/
// define `theClockApp` stored in function to be ran
const theClockApp = () => {
  
// Get and store current date and time with `new Date()` object
const timeNow = new Date();
// Check-Check: See all `Date()` methods and properties
// console.log( timeNow );

// Get current hours
let gotHours = timeNow.getHours();
// Get current minutes
let gotMinutes = timeNow.getMinutes();
// Get current seconds
let gotSeconds = timeNow.getSeconds();

// Check-Check: Is the data correct? 
// console.log(gotHours, gotMinutes, gotSeconds);

/************
Format Data
************/
// Get AM or PM
const gotAmOrPM = gotHours >= 12 ? 'PM' : 'AM';
// Get 12 hour format
gotHours = gotHours % 12 || 12;
// Optionally, append zero to single digit hours for display
const displayHours = gotHours < 10 ? `0${gotHours}` : gotHours.toString();
// Optionally, append zero to single digit minutes for display
const displayMinutes = gotMinutes < 10 ? `0${gotMinutes}` : gotMinutes.toString();
// Optionally, append zero to single digit seconds for display
const displaySeconds = gotSeconds < 10 ? `0${gotSeconds}` : gotSeconds.toString();

/************
Get DOM Elements
************/
// Get Hours
const hours = document.querySelector(".hours") as HTMLElement | null;
// Get minutes
const minutes = document.querySelector(".minutes") as HTMLElement | null;
// Get seconds
const seconds = document.querySelector(".seconds") as HTMLElement | null;
// Get AM or PM
const amOrPM = document.querySelector('.amOrPM') as HTMLElement | null;

/************
Set DOM Elements
************/
// Set the hours
if (hours) hours.innerText = `${gotHours}`;
// Set the minutes
if (minutes) minutes.innerText = `${gotMinutes}`;
// Set the hours
if (hours) hours.innerText = displayHours;
// Set the minutes
if (minutes) minutes.innerText = displayMinutes;
// Set the seconds
if (seconds) seconds.innerText = displaySeconds;
// Set AM or PM
if (amOrPM) amOrPM.innerText = gotAmOrPM;
// Re-run `theClockApp` every 1 second (1000 ms)
setInterval(theClockApp, 1000);

}; // <-- Add this closing brace for theClockApp function

theClockApp(); // Optionally, run once on load

      </script>