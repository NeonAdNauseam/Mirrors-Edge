---
import Camera from '../components/Camera.astro';
import WidgetParent  from '../components/WidgetParent.astro';
---


    <WidgetParent />
    <Camera />
    

<style>
  :root {
    font-family: 'Chillax', sans-serif;
    font-family: 'Tanker', sans-serif;
    --font-style-header: 'Tanker', sans-serif;
    --font-style-body: 'Chillax', sans-serif;
    --widget-bg: hsla(190, 52.2%, 82%, 0.31);
    --widget-padding: 1em;
    --widget-width: 300px;
    --widget-gap: 1em;
    --widget-margin: 4em;
    --silhouette-color: black;
    --text-color-one: hsl(161, 63%, 12%);
    --text-color-two: hsl(0, 0%, 10%);
    --font-size-large: 1.5em;
    --font-size-medium: 1em;
  }

body {
  background: var(--bg-color);
  font-family: var(--font-family);
  color: var(--text-color-one);
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
  flex-direction: column;
  text-align: center;
}


    
</style>